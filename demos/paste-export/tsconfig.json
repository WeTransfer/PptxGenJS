{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./out/defs",
    "esModuleInterop": true,
    "lib": ["dom", "es2015", "es2017.object"],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./out",
    "sourceMap": true,
    "target": "es5",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}